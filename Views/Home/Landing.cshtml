                        <li class="nav-item">
                            <a class="nav-link" href="#layouts">Layouts</a>
                        </li>*@
                    @*                  <li class="nav-item">
                            <a class="nav-link" href="#web-apps">Features</a>
                        </li>*@
                </ul>
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary">
                    <i class="bi bi-bug-fill me-1"></i> Try Now
                </a>
            </div>
        </div>
    </nav>
    <div class="hero bg-light" id="home">
        <div class="container">
            <div class="row g-4 g-xl-0">
                <div class="col-xl-6 col-lg-12 pe-0 pe-xl-5 pb-0 pb-xl-5">
