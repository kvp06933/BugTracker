@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="index, follow">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="description" content="">
    <title>Vetra - Shadow Tracker</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
    <link href="https://fonts.googleapis.com/css2?family=Urbanist:wght@200;300;400;600;900&amp;display=swap" rel="stylesheet">
    <!-- Bootstrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <style>
        body {
            font-family: 'Urbanist', sans-serif;
            line-height: 30px;
        }

        a {
            text-decoration: none;
        }

        .btn:focus, .btn:active {
            box-shadow: none;
        }

        .btn-outline-primary {
            border-width: 2px;
            border-color: #ff6e40;
            color: #ff6e40;
        }

            .btn-outline-primary:hover {
                background-color: #ff6e40;
                border-color: #ff6e40;
            }

        .btn-primary {
            background-color: #ff6e40;
            border-color: #ff6e40;
        }

            .btn-primary:hover, .btn-primary:active, .btn-primary:focus {
                background-color: #ff6e40 !important;
            }

            .btn-primary:hover {
                border-color: transparent;
            }

            .btn-check:focus + .btn-primary, .btn-primary:focus {
                border-color: transparent;
            }

            .btn-check:active + .btn-primary:focus, .btn-check:checked + .btn-primary:focus, .btn-primary.active:focus, .btn-primary:active:focus, .show > .btn-primary.dropdown-toggle:focus {
                box-shadow: 0 0 0 0.25rem #ff6e4051;
            }

        .navbar {
            background-color: white;
            position: sticky;
            top: 0;
            z-index: 999;
            box-shadow: 0 0 5px 0 rgba(0, 0, 0, 0.15);
        }

        .navbar-brand {
            color: #ff6e40 !important;
            margin-right: 30px;
            font-size: 1.5rem;
            font-weight: 700;
        }

        .navbar a.nav-link {
            color: black !important;
            font-size: 16px;
            padding: .7rem 1rem !important;
        }

            .navbar a.nav-link:hover, .navbar a.nav-link:focus {
                color: #ff6e40 !important;
            }

        .hero {
            padding: 50px 0 0;
            overflow: hidden;
            position: relative;
            background-image: linear-gradient(to right, rgb(255 255 255 / 15%) 1px, transparent 1px), linear-gradient(to bottom, rgb(255 255 255 / 15%) 1px, transparent 1px);
            background-size: 1.5rem 1.5rem;
            background-color: #ff6e4051 !important;
        }

        .lead {
            font-weight: 500;
        }

        .hero svg {
            pointer-events: none;
        }

        .hero-title {
            font-weight: bold;
            line-height: 60px;
            font-size: 40px;
        }

        section {
            text-align: center;
            padding: 80px 30px;
            padding-bottom: 0;
            scroll-margin-top: 50px;
        }

        @@media (min-width: 1600px) {
            section {
                padding: 80px 150px;
            }
        }

        section:last-child {
            padding-bottom: 80px !important;
        }

        section .section-header {
            padding-bottom: 80px;
        }

            section .section-header p {
                margin-bottom: 0px;
            }

            section .section-header h2 {
                font-size: 35px;
            }

        .demo-item {
            padding: 1.5rem;
        }

            .demo-item:hover .demo-item-img:before {
                opacity: .45;
            }

            .demo-item:hover .demo-item-img img {
                transform: translateY(5px);
            }

        .demo-item-title {
            font-size: 22px;
            display: block;
            font-weight: 600;
            color: black;
        }

        .demo-item:hover .demo-item-title {
            color: #777777;
            text-decoration: none;
        }

        .demo-item .demo-item-img {
            padding: 1.5rem 1.5rem 0;
            margin: 1.3rem 0;
            position: relative;
            display: block;
            border-radius: 5px;
            overflow: hidden;
        }

            .demo-item .demo-item-img:before {
                content: '';
                display: block;
                position: absolute;
                right: 0;
                bottom: 0;
                left: 0;
                top: 0;
                background-color: #ff6e40;
                opacity: .3;
                transition: opacity .15s;
            }

            .demo-item .demo-item-img img {
                border-top-right-radius: 5px;
                border-top-left-radius: 5px;
                position: relative;
                z-index: 1;
                transition: transform .15s;
                transform: translateY(0);
                box-shadow: 0px 5px 20px 0px rgba(0, 0, 0, 0.15);
            }

        .demo-item-buttons .btn {
            margin: 0 5px;
            padding: 5px 18px;
            border: 1px solid black;
        }

            .demo-item-buttons .btn:hover, .demo-item-buttons .btn:focus {
                box-shadow: none;
                background-color: #ff6e40;
                color: white;
                border-color: transparent;
            }

        svg {
            width: 100%;
            position: absolute;
            left: 0;
            right: 0;
            bottom: -1px;
        }

            svg.footer {
                transform: rotate( 180deg );
                top: -1px;
                bottom: auto;
            }

            svg path {
                fill: #f9f9f9;
            }

        .libraries > div {
            background-color: white;
            width: 50px;
            height: 50px;
            border-radius: 50%;
        }

        div.footer {
            text-align: center;
            color: white;
            padding: 100px 0 70px;
            position: relative;
        }

            div.footer .btn {
                padding: 15px 30px;
            }

                div.footer .btn:hover, .footer .btn:focus {
                    transform: scale(1.05);
                }

        .scroll-top-btn {
            border-radius: 50%;
            width: 60px;
            height: 60px;
            background-color: rgb(0 0 0 / 70%);
            color: white;
            position: fixed;
            right: 30px;
            bottom: -50px;
            opacity: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            transition: all .3s;
            z-index: 999;
        }

            .scroll-top-btn.open {
                bottom: 30px;
                opacity: 1;
            }

            .scroll-top-btn:hover {
                color: white;
                background-color: black;
            }

        @@media (max-width: 992px) {
            .demo-item {
                padding: .5rem;
            }
        }

        @@media (max-width: 768px) {
            .hero {
                padding: 40px 0 0;
            }

            .hero-title {
                line-height: 2.5rem;
                font-size: 2rem;
            }

            .scroll-top-btn {
                width: 40px;
                height: 40px;
                font-size: 1.5rem;
            }

            section {
                padding: 50px 0;
            }

                section .section-header {
                    padding-bottom: 50px;
                }

            .demo-item-buttons .btn {
                padding: 5px 15px;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a href="#" class="navbar-brand scroll-btn">
                Shadow Tracker
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav flex-grow-1 justify-content-center">
